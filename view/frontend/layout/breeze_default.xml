<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="better_compatibility" xsi:type="array">
                    <item name="Amasty_Preorder" xsi:type="boolean">true</item>
                </argument>
                <argument name="bundles" xsi:type="array">
                    <item name="dynamic" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <!-- Fix "Unable to resolve dependency" error, because Amasty forgot to return value form the file -->
                            <item name="Amasty_Preorder/js/product/preorder_configurable_list" xsi:type="array">
                                <item name="path" xsi:type="string">Amasty_Preorder/js/product/preorder_configurable_list</item>
                                <item name="global" xsi:type="string">$.breezemap.amastyPreorderList</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
